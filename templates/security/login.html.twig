{% extends 'template.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block pageTitle %}{% endblock %}

{% block body %}
<div id="page" class="login flex textAlignCenter alignItemCenter justifyCenter">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="fontProject color1">Please sign in</h1>

        <p class="marginLeft-3"><label for="inputEmail">Email &nbsp</label><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inputConnectEmail" autocomplete="email" required autofocus></p>
        <p class="marginLeft-5"><label for="inputPassword">Password &nbsp</label><input type="password" name="password" id="inputPassword" class="inputConnectPassword" autocomplete="current-password" required></p>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
